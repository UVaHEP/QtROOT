    QT_UICCOM = [ ['$QT_UIC', '$QT_UICDECLFLAGS', '-o', '${TARGETS[0]}', '$SOURCE'],
            ['$QT_UIC', '$QT_UICIMPLFLAGS', '', '', '-o', '${TARGETS[1]}', '$SOURCE'],
           ['$QT_MOC', '$QT_MOCFROMHFLAGS', '-o', '${TARGETS[2]}', '${TARGETS[0]}']],
